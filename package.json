{
	"name": "personal-website",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"author": {
		"url": "https://kaans.land",
		"email": "kaanrkaraman@gmail.com",
		"name": "R. Kaan Karaman"
	},
	"readme": "README.md",
	"scripts": {
		"generate:rss": "tsx scripts/generate-rss.ts",
		"dev": "vite",
		"build": "yarn generate:rss && tsc -b && vite build --outDir dist/client && vite build --ssr src/entry-server.tsx --outDir dist/server && tsx scripts/prerender.ts",
		"lint": "eslint .",
		"preview": "vite preview",
		"format": "prettier --write .",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"prettier --write",
			"eslint --fix"
		],
		"*.{json,css,md}": [
			"prettier --write"
		]
	},
	"engines": {
		"node": ">=22.0.0"
	},
	"dependencies": {
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@types/node": "^25.0.3",
		"buffer": "^6.0.3",
		"front-matter": "^4.0.2",
		"globby": "^16.1.0",
		"marked": "^17.0.1",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"react-markdown": "^10.1.0",
		"react-router-dom": "^7.11.0",
		"rehype-highlight": "^7.0.2",
		"rehype-raw": "^7.0.0",
		"remark-gfm": "^4.0.1",
		"tailwindcss": "^4.1.18"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"@typescript-eslint/eslint-plugin": "^8.50.1",
		"@typescript-eslint/parser": "^8.50.1",
		"@vitejs/plugin-react": "^5.1.2",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-react-refresh": "^0.4.26",
		"globals": "^16.5.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.7.4",
		"ts-node": "^10.9.2",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.50.1",
		"vite": "^7.3.0"
	},
	"packageManager": "yarn@4.12.0"
}
